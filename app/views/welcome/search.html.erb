 <div class="banner_cov">
 <%= image_tag("banner_inn.jpg") %></div>  
 <div class="container">
 <div class="row">
  <div class="col-md-6 sign_pop col-md-offset-3"><% @search.each do |search| %>
  <div class="job_bx">
  <div class="left_dis">
   <h1><label>Job Title :</label> <%= search.title%><br/></h1>
  <p><label>Job Description :</label> 
  <div id="less"> 
    <%= search.description.truncate(100)%>
  </div>
  <div id="more" style="display:none;">
    <%= search.description %>
  </div>
  </p>
  <a href="javascript:void(0)" id="view_details">View Detail</a> 

  </div>
  <div class="apply_dis">
  <%= job_apply_link(search)%>
  </div>
  <div class="clearfix"></div>
  </div>
<% end %>
</div>
</div>
</div>

<script>
$(document).ready(function(){
  $("#view_details").click(function(){
     $("#less").hide()
    $("#more").show()
  })
})

</script>