<p id="notice"><%= notice %></p>

<h1>Job Listing</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Industry</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.try(:industry).try(:title) %></td>
        <td><%= link_to 'Show', job  %></td>
        <td><%= link_to 'Edit', edit_job_path(job) if current_user.client?%></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } if current_user.client? %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>



