 <%= form_tag interview_schedules_path do %>
	<%= hidden_field_tag :interview_id, @job.interview.id if @job.interview.present? %>
	<%= hidden_field_tag :user_id, @user.id%>
	<%= hidden_field_tag :date_count, ""%>
	<div class="form-group">
	  <%= label_tag :stage, nil, class: "col-md-3 control-label" %>
    <div class="col-md-9">
    	<%= text_field_tag :stage,nil, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
	  <%= label_tag :interviewer_names, nil, class: "col-md-3 control-label" %>
    <div class="col-md-9">
    	<%= text_field_tag :interviewer_names,nil, class: "form-control"%>
    </div>
  </div>
  <div id="dates"></div>
  
  <div class="form-group">
	  <%= label_tag :candidate_feedback, nil, class: "col-md-3 control-label" %>
    <div class="col-md-9">
    	<%= text_field_tag :candidate_feedback,nil, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
	  <%= label_tag :client_comment, nil, class: "col-md-3 control-label" %>
    <div class="col-md-9">
    	<%= text_field_tag :client_comment,nil, class: "form-control"%>
    </div>
  </div>
    <div class="form-group">
		  <div class="col-md-9">
		  	<%= submit_tag "submit",class: "btn btn-primary"%>
		  </div>
  </div>
 <% end %>

<button id="add_interview_dates" class="btn btn-primary">Add Interview Dates</button>


 <script>
 $(document).ready(function(){
 	
 	var count = 0;
 	
 	$("#add_interview_dates").click(function(){
 		var val = ++count;
 		var html = "<div class='form-group' id='date"+val+"'><label for='reason' class='col-md-3 control-label'> <%='Date'%>"+val+"</label><div class='col-md-9'><%= escape_javascript text_field_tag 'interview_avail_date',nil ,:class=>"form-control avail_date"%></div></div>";
	 $('#dates').append(html)
   $("#date"+val+" .avail_date").attr('name', 'interview_avail_date'+val)
   $("#date"+val+" .avail_date").attr('id', 'interview_avail_date'+val);
   $("#interview_avail_date"+val).datetimepicker();
   $("#date_count").val(val)
 	});
 });
 </script>